{
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/.gitignore": true,
        "**/pnpm-lock.yaml": true,
        "**/*.svg": true,
        "**/Icon*.svelte": true
    },
    "path-intellisense.mappings": {
        "$icons": "${workspaceFolder}/src/lib/icons",
        "$lib": "${workspaceFolder}/src/lib",
        "$stores": "${workspaceFolder}/src/lib/stores",
        "$portfolios": "${workspaceFolder}/src/lib/portfolios",
        "$utils": "${workspaceFolder}/src/lib/utils"
    }
}
