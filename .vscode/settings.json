{
    "editor.formatOnSave": true,
    "files.exclude": {
        // We're hiding these files because they shouldn't be edited manually.
        "**/.*ignore": true,
        "**/pnpm-lock.yaml": true
    },
    "search.exclude": {
        // We're excluding these files because their values are already accessible in ".*ignore-sync".
        "**/.*ignore": true,
        "**/pnpm-lock.yaml": true,
        "**/*.svg": true,
        "**/Icon*.svelte": true
    },
    "path-intellisense.mappings": {
        "$lib": "${workspaceFolder}/src/lib",
        "$stores": "${workspaceFolder}/src/lib/stores",
        "$portfolios": "${workspaceFolder}/src/lib/portfolios",
        "$utils": "${workspaceFolder}/src/lib/utils"
    }
}
